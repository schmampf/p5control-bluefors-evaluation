{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit"
        }
        },
        "isort.args": [
            "--profile",
            "black"
        ],
    // === Pylance settings ===
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "strict",

    // === Mypy settings ===
    "mypy.executablePath": "${workspaceFolder}/.venv/bin/mypy",
    "mypy.args": [
        "--config-file",
        "${workspaceFolder}/.vscode/mypy.ini"
    ],

    // // Optional: disable the deprecated built-in mypy integration to avoid conflicts
    // "python.linting.mypyEnabled": false,

    "cSpell.words": [
        "arbu",
        "colorbar",
        "imshow",
        "interp",
        "meshgrid",
        "newaxis",
        "zorder",
        "popt",
        "pcov",
        "perr",
        "xdata",
        "ydata",
        "maxfev",
        "jaxfit"
    ],
